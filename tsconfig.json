{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",

    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "jsxFragmentFactory": "JSX.Fragment",

    // TypeDoc uses shiki for syntax highlighting, but Shiki's types
    // expect a DOM environment, not a Node one.
    "skipLibCheck": true
  },
  "include": ["src"]
}
